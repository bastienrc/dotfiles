#
# Fichier de configuration de screen
#
#
#setenv DISPLAY ''
# Passer le message de démarrage
startup_message off

activity "%c activity -> %n%f%t"

# Active le support des 256 couleurs
#term    screen-256color
term rxvt-256color

# Active le support de l'utf-8
defutf8 on

# Désactive les clignotements
vbell   off

# Affiche les infos du shell au demarrage
# shell   -$SHELL

# Efface l'écran a la sortie d'une application
altscreen on

#nethack   on

#zombie    ko

# Ouvre screen dans le repertoire actuel par defaut il s'ouvre
# toujours sur le repertoire $HOME
chdir

# Se detache automatiquement donc en cas de coupure on peut reprendre la ou on
# était.
autodetach on

# Raccourci Clavier
bindkey -k k5 prev
bindkey -k k6 next
bindkey -k k7 screen
bindkey -k k8 detach

# Une ligne de status en bas de la fenetre
hardstatus alwayslastline
hardstatus string '%{gk}[ %{G}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'
